@page "/users"
@rendermode InteractiveServer




@if (_users == null)
{
    <p><em>Loading..</em></p>
}
else
{

    <button @onclick="ToggleDataSource">@(_useApi ? "Visa lokala användare" : "Visa API-användare")</button>
    <button @onclick="ToggleSortOrder">@(_isAscending ? "Sortera Namn \u2191" : "Sortera Namn  \u2193")</button>
    <button @onclick="ToggleSortOrderById">@(_isAscendingId ? "Sortera ID \u2191" : "Sortera ID \u2193")</button>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Namn</th>
            <th>Email</th>
            <th>Gata</th>
            <th>Stad</th>
            <th>Postnummer</th>
            <th>Företag</th>
            <th>Slogan</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in _users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Address.Street</td>
                <td>@user.Address.City</td>
                <td>@user.Address.Zipcode</td>
                <td>@user.Company.Name</td>
                <td>@user.Company.CatchPhrase</td>
            </tr>
        }
        </tbody>
    </table>

    <p @onclick="ToggleShowUsers" style="cursor:pointer;"><b>@(_showAll ? "visa alla" : "visa färre")</b></p>

}





@code {
    private List<User>? _users;

    private readonly UserDataAccess _dataAccess = new UserDataAccess();
    private readonly UserDataImporter _dataImporter = new UserDataImporter();

    private bool _useApi = false;
    private bool _showAll = true;
    private bool _isAscending = true;
    private bool _isAscendingId = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(1000);
            await LoadSomeUsers();
        }
    }

    private async Task LoadSomeUsers()
    {

        if (_useApi)
        {
            _users = (await _dataImporter.GetUsers()).OrderBy(users => users.Name).Take(5).ToList();

        }
        else
        {
            _users = (await _dataAccess.GetUsers()).OrderBy(users => users.Name).Take(5).ToList();

        }

        StateHasChanged();
    }


    private async Task LoadAllUsers()
    {
        if (_useApi)
        {
            _users = (await _dataImporter.GetUsers()).OrderBy(users => users.Name).ToList();
        }
        else
        {
            _users = (await _dataAccess.GetUsers()).OrderBy(users => users.Name).ToList();
        }
    }




    private async Task SortByName()
    {
        if (_useApi)
        {
            _users = (await _dataImporter.GetUsers()).OrderBy(users => users.Name).Take(5).ToList();

        }
        else
        {
            _users = (await _dataAccess.GetUsers()).OrderBy(users => users.Name).Take(5).ToList();

        }
    }

    private async Task SortByNameDescending()
    {

        if (_useApi)
        {
            _users = (await _dataImporter.GetUsers()).OrderByDescending(users => users.Name).Take(5).ToList();

        }
        else
        {
            _users = (await _dataAccess.GetUsers()).OrderByDescending(users => users.Name).Take(5).ToList();

        }
    }

    private async Task SortById()
    {
        if (_useApi)
        {
            _users = (await _dataImporter.GetUsers()).OrderBy(users => users.Id).Take(5).ToList();

        }
        else
        {
            _users = (await _dataAccess.GetUsers()).OrderBy(users => users.Id).Take(5).ToList();

        }
    }

    private async Task SortByIdDescending()
    {
        if (_useApi)
        {
            _users = (await _dataImporter.GetUsers()).OrderByDescending(users => users.Id).Take(5).ToList();

        }
        else
        {
            _users = (await _dataAccess.GetUsers()).OrderByDescending(users => users.Id).Take(5).ToList();

        }
    }

    private async Task ToggleDataSource()
    {
        _useApi = !_useApi;
        await LoadSomeUsers();
    }

    private async Task ToggleSortOrder()
    {
        _isAscending = !_isAscending;
        if (_isAscending)
        {
            await SortByName();
        }
        else
        {
            await SortByNameDescending();
        }

    }

    private async Task ToggleSortOrderById()
    {
        _isAscendingId = !_isAscendingId;
        if (_isAscendingId)
        {
            await SortById();
        }
        else
        {
            await SortByIdDescending();
        }

    }

    private async Task ToggleShowUsers()
    {
        _showAll = !_showAll;
        if (_showAll)
        {
            await LoadSomeUsers();
        }
        else
        {
            await LoadAllUsers();
        }
    }

}